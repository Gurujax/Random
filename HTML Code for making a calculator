<script text='text/javascript'>
var i = 0;
function brackets(){
if(i == 0){
calculator.display.value += '(';
i = 1;}
else if(i == 1){
calculator.display.value += ')';
i = 0;}}
function backspace(){
var x = calculator.display.value;
if(x.length > 0){
x = x.substring(0, x.length-1);
calculator.display.value = x;}}
function Cbtn(){
alert("Alert : Clearing Screen");}
function ask(){
prompt("Prompt : Your Name please?");}
function val(){var y= calculator.display.value;
if(y==' = undefined'){
alert("This is Validation : No Input")}}
</script>
